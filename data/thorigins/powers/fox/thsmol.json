{
	"type": "origins:multiple",
	"name": { "translate": "fox.thsmol.name" },
	"description": { "translate": "fox.thsmol.description" },
	"badges": [
		{
			"type": "origins:keybind",
			"sprite": "minecraft:textures/item/diamond.png",
			"text": "origin.thorigin.passive"
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "thsmol.info"
		}
	],

	"adjust_size": {
		"type": "origins:action_on_callback",
		"entity_action_gained": {
			"type": "origins:delay",
			"ticks": 1,
			"action": {
				"type": "origins:if_else",
				"condition": {
					"type": "origins:resource",
					"resource": "*:fox/thtrackers_scale_modified",
					"compare_to": 0,
					"comparison": "=="
				},
				"if_action": {
					"type": "origins:change_resource",
					"resource": "*:fox/thtrackers_scale_modified",
					"change": 2
				}
			}
		}
	},

	"max_health": {
		"type": "origins:attribute",
		"modifier": {
			"attribute": "minecraft:generic.max_health",
			"id": "thorigins:fox/thsmol_max_health",
			"operation": "add_value",
			"amount": -4
		},
		"update_health": true
	},

	"thtrackers_keepalive": {
		"type": "origins:action_over_time",
		"interval": 20,
		"entity_action": {
			"type": "origins:if_else",
			"condition": {
				"type": "origins:power",
				"power": "thorigins:fox/thtrackers",
				"inverted": true
			},
			"if_action": {
				"type": "origins:grant_power",
				"power": "thorigins:fox/thtrackers",
				"source": "thorigins:universal"
			}
		}
	}
}
