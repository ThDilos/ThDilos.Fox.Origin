{
	"type": "origins:multiple",
	"name": { "translate": "fox.thhunger.name" },
	"description": { "translate": "fox.thhunger.description" },
	"badges": [
		{
			"type": "origins:tooltip",
			"text": { "translate": "origin.thorigin.passive" },
			"sprite": "minecraft:textures/item/rotten_flesh.png"
		},
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": { "translate": "thhunger.info" }
		}
	],

	"_init_": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:execute_command",
			"command": "/scoreboard objectives add foodLevel food \"Player FoodLevel\""
		}
	},

	"ticks_20": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "/resource operation @s thorigins:fox/thhunger_food_level_resource = @s foodLevel"
		}
	},

	"base_exhaustion": {
		"type": "origins:modify_exhaustion",
		"modifier": {
			"operation": "multiply_base_additive",
			"amount": 0.5
		},
		"condition": {
			"type": "origins:all_of",
			"conditions": [
				{
					"type": "origins:food_level",
					"comparison": ">=",
					"compare_to": 6
				},
				{
					"type": "origins:resource",
					"resource": "*:fox/thfoxify_afk_timer",
					"compare_to": 1,
					"comparison": ">"
				}
			]
		}
	},

	"faster_attack": {
		"type": "origins:attribute",
		"modifier": {
			"attribute": "minecraft:generic.attack_speed",
			"id": "thorigins:fox/thhunger_faster_attack",
			"operation": "add_multiplied_base",
			"amount": 0.25
		}
	},

	"food_level_resource": {
		"type": "origins:resource",
		"min": 0,
		"max": 20
	},

	"hunger_based_dmg_modifier": {
		"type": "origins:modify_damage_dealt",
		"modifier": {
			"operation": "multiply_total_additive",
			"amount": -0.6,
			"modifier": {
				"operation": "add_base_late",
				"amount": 0.0325,
				"modifier": {
					"operation": "multiply_total_additive",
					"resource": "*:*_food_level_resource",
					"modifier": {
						"operation": "add_base_early",
						"amount": -1
					}
				}
			}
		}
	}
}
