{
	"type": "origins:multiple",
	"name": "fox.thhunger.name",
	"description": "fox.thhunger.description",
	"badges": [
		{
			"type": "origins:keybind",
			"text": "origin.thorigin.passive",
			"sprite": "minecraft:textures/item/rotten_flesh.png"
		},
		{
			"type": "origins:keybind",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "thhunger.info"
		}
	],

	"_init_": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:execute_command",
			"command": "/scoreboard objectives add foodLevel food \"Player FoodLevel\""
		}
	},

	"ticks_20": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "/resource operation @s thorigins:fox/thhunger_food_level_resource = @s foodLevel"
		}
	},

	"base_exhaustion": {
		"type": "origins:modify_exhaustion",
		"modifier": {
			"operation": "multiply_base",
			"value": 0.5
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:food_level",
					"comparison": ">=",
					"compare_to": 6
				},
				{
					"type": "origins:resource",
					"resource": "*:fox/thfoxify_afk_timer",
					"compare_to": 1,
					"comparison": ">"
				}
			]
		}
	},

	"faster_attack": {
		"type": "origins:attribute",
		"modifier": {
			"attribute": "minecraft:generic.attack_speed",
			"operation": "multiply_base",
			"value": 0.25
		}
	},

	"food_level_resource": {
		"type": "origins:resource",
		"min": 0,
		"max": 20
	},

	"hunger_based_dmg_modifier": {
		"type": "origins:modify_damage_dealt",
		"modifier": {
			"operation": "multiply_total",
			"value": -0.6,
			"modifier": {
				"operation": "addition",
				"value": 0.0325,
				"modifier": {
					"operation": "multiply_total",
					"resource": "*:*_food_level_resource",
					"value": 0,
					"modifier": {
						"operation": "addition",
						"value": -1
					}
				}
			}
		}
	}
}
