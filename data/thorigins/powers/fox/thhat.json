{
	"type": "origins:multiple",
	"hidden": true,

	"__init__": {
		"type": "origins:action_on_callback",
		"entity_action_gained": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "/tag @s add hatting"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale easing set pehkui:hitbox_height pehkui:exponential_out @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale easing set pehkui:hitbox_width pehkui:exponential_out @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale easing set pehkui:model_height pehkui:exponential_out @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale easing set pehkui:model_width pehkui:exponential_out @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/data merge entity @s {NoAI:1b}"
				},
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:command",
						"command": "/execute if data entity @s {Sleeping:0b,Sitting:0b}",
						"compare_to": 0,
						"comparison": ">"
					},
					"if_action": {
						"type": "origins:execute_command",
						"command": "/data merge entity @s {Sleeping:0b,Sitting:1b}"
					}
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:hitbox_height 0.316 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:hitbox_width 0.5 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:model_height 0.7 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:model_width 0.7 @s"
				}
			]
		}
	},

	"reset_exit_for_forge": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:change_resource",
			"resource": "*:*_exit",
			"change": -1
		}
	},

	"fall_smother_dmg_ignore": {
		"type": "origins:invulnerability",
		"damage_condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:name",
					"name": "inWall"
				},
				{
					"type": "origins:from_falling"
				},
				{
					"type": "origins:attacker",
					"entity_condition": {
						"type": "origins:passenger",
						"bientity_condition": {
							"type": "origins:riding_recursive"
						}
					}
				}
			]
		}
	},

	"safari": {
		"type": "origins:resource",
		"min": -1,
		"max": 1,
		"start_value": 0,
		"max_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:change_resource",
					"resource": "*:*_safari",
					"change": 0,
					"operation": "set"
				},
				{
					"type": "origins:area_of_effect",
					"shape": "cube",
					"radius": 3,
					"bientity_condition": {
						"type": "origins:target_condition",
						"condition": {
							"type": "origins:and",
							"conditions": [
								{
									"type": "origins:in_tag",
									"tag": "thorigins:fox"
								},
								{
									"type": "origins:nbt",
									"nbt": "{\"Tags\":[\"elevating\"]}"
								}
							]
						}
					},
					"bientity_action": {
						"type": "origins:if_else",
						"condition": {
							"type": "origins:actor_condition",
							"condition": {
								"type": "origins:passenger",
								"compare_to": 0,
								"comparison": "=="
							}
						},
						"if_action": {
							"type": "origins:and",
							"actions": [
								{
									"type": "origins:invert",
									"action": {
										"type": "origins:mount"
									}
								},
								{
									"type": "origins:target_action",
									"action": {
										"type": "origins:grant_power",
										"power": "*:fox/thhat",
										"source": "thorigins:temp"
									}
								},
								{
									"type": "origins:target_action",
									"action": {
										"type": "origins:execute_command",
										"command": "/tag @s remove elevating"
									}
								}
							]
						},
						"else_action": {
							"type": "origins:if_else",
							"condition": {
								"type": "origins:actor_condition",
								"condition": {
									"type": "origins:passenger",
									"bientity_condition": {
										"type": "origins:actor_condition",
										"condition": {
											"type": "origins:power",
											"power": "*:fox/thhat",
											"source": "thorigins:temp"
										}
									}
								}
							},
							"if_action": {
								"type": "origins:and",
								"actions": [
									{
										"type": "origins:actor_action",
										"action": {
											"type": "origins:execute_command",
											"command": "/tp @e[tag=elevating,distance=..5,limit=1,sort=nearest] ~ ~1 ~"
										}
									},
									{
										"type": "origins:actor_action",
										"action": {
											"type": "origins:passenger_action",
											"action": {
												"type": "origins:change_resource",
												"resource": "*:*_safari",
												"change": 1
											}
										}
									}
								]
							}
						}
					}
				}
			]
		},
		"min_action": {
			"type": "origins:if_else",
			"condition": {
				"type": "origins:passenger",
				"compare_to": 0,
				"comparison": ">"
			},
			"if_action": {
				"type": "origins:and",
				"actions": [
					{
						"type": "origins:change_resource",
						"resource": "*:*_safari",
						"change": 0,
						"operation": "set"
					},
					{
						"type": "origins:passenger_action",
						"action": {
							"type": "origins:change_resource",
							"resource": "*:*_safari",
							"change": -1
						}
					}
				]
			},
			"else_action": {
				"type": "origins:dismount"
			}
		}
	},

	"ticks_2": {
		"type": "origins:action_over_time",
		"interval": 2,
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:riding",
						"inverted": true
					},
					"if_action": {
						"type": "origins:and",
						"actions": [
							{
								"type": "origins:passenger_action",
								"action": {
									"type": "origins:dismount"
								}
							},
							{
								"type": "origins:change_resource",
								"resource": "*:*_exit",
								"change": 1
							}
						]
					}
				},
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:riding",
						"bientity_condition": {
							"type": "origins:target_condition",
							"condition": {
								"type": "origins:entity_type",
								"entity_type": "minecraft:player"
							}
						}
					},
					"if_action": {
						"type": "origins:if_else_list",
						"actions": [
							{
								"condition": {
									"type": "origins:command",
									"command": "/execute if data entity @s {Sleeping:0b,Sitting:1b}",
									"compare_to": 0,
									"comparison": ">"
								},
								"action": {
									"type": "origins:riding_action",
									"action": {
										"type": "origins:execute_command",
										"command": "/tp @e[tag=hatting,type=#thorigins:fox,dy=20,nbt={Sleeping:0b,Sitting:1b}] ~ ~ ~ facing ^ ^-3 ^10"
									}
								}
							},
							{
								"condition": {
									"type": "origins:command",
									"command": "/execute if data entity @s {Sleeping:1b,Sitting:0b}",
									"compare_to": 0,
									"comparison": ">"
								},
								"action": {
									"type": "origins:riding_action",
									"action": {
										"type": "origins:if_else",
										"condition": {
											"type": "origins:and",
											"inverted": true,
											"conditions": [
												{
													"type": "origins:resource",
													"resource": "*:fox/thfoxify_afk_timer",
													"compare_to": 0,
													"comparison": "=="
												},
												{
													"type": "origins:command",
													"command": "/execute if entity @e[tag=sleepin,limit=1,sort=nearest,nbt={NoAI:1b,NoGravity:1b,Sleeping:1b},distance=..2]",
													"compare_to": 0,
													"comparison": ">"
												}
											]
										},
										"if_action": {
											"type": "origins:execute_command",
											"command": "/tp @e[tag=hatting,type=#thorigins:fox,dy=20,nbt={Sleeping:1b,Sitting:0b}] ~ ~ ~ facing ^0.01 ^ ^-1"
										}
									}
								}
							}
						]
					}
				}
			]
		}
	},

	"exit": {
		"type": "origins:resource",
		"min": 0,
		"max": 1,
		"start_value": 0,
		"max_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "/data merge entity @s {NoAI:0b}"
				},
				{
					"type": "origins:execute_command",
					"command": "/data modify entity @s Sitting set value 0"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale reset pehkui:hitbox_height @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale divide pehkui:hitbox_width 0.5 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale divide pehkui:model_height 0.7 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale divide pehkui:model_width 0.7 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/tag @s remove hatting"
				},
				{
					"type": "origins:revoke_power",
					"power": "*:fox/thhat",
					"source": "thorigins:temp"
				}
			]
		}
	}
}
