{
	"type": "origins:multiple",

	"ticks": {
		"type": "origins:action_over_time",
		"interval": 1,
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:nbt",
						"nbt": "{\"Tags\":[\"mounted\"]}"
					},
					"if_action": {
						"type": "origins:if_else",
						"condition": {
							"type": "origins:or",
							"conditions": [
								{
									"type": "origins:riding",
									"inverted": true
								},
								{
									"type": "origins:passenger",
									"compare_to": 0,
									"comparison": "=="
								}
							]
						},
						"if_action": {
							"type": "origins:and",
							"actions": [
								{
									"type": "origins:execute_command",
									"command": "/tag @s remove mounted"
								},
								{
									"type": "origins:execute_command",
									"command": "/tag @s add wasted"
								}
							]
						}
					}
				},
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:nbt",
						"nbt": "{\"Tags\":[\"wasted\"]}"
					},
					"if_action": {
						"type": "origins:if_else",
						"condition": {
							"type": "origins:passenger",
							"compare_to": 0,
							"comparison": ">"
						},
						"if_action": {
							"type": "origins:passenger_action",
							"action": {
								"type": "origins:dismount"
							}
						},
						"else_action": {
							"type": "origins:and",
							"actions": [
								{
									"type": "origins:execute_command",
									"command": "/tp @s ~ 500 ~"
								},
								{
									"type": "origins:delay",
									"ticks": 1,
									"action": {
										"type": "origins:execute_command",
										"command": "/kill @s"
									}
								}
							]
						}
					}
				}
			]
		}
	},

	"size": {
		"type": "origins:action_on_callback",
		"entity_action_added": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "/scale delay set pehkui:height 0 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale set pehkui:interaction_box_width 0 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:width 0 @s"
				},
				{
					"type": "origins:execute_command",
					"command": "/scale multiply pehkui:height 0 @s"
				}
			]
		}
	}
}
